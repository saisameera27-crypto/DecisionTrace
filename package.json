{
  "name": "virtual-vet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:all",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --config=playwright.smoke.config.ts --grep @smoke",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "vitest watch",
    "test:ui": "vitest run tests/ui",
    "test:ui:watch": "vitest watch tests/ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx || echo 'No ESLint config found'",
    "smoke:prod": "tsx scripts/smoke-test.ts",
    "test:real-gemini": "tsx scripts/test-real-gemini.ts",
    "budget:check": "tsx scripts/budget-check.ts",
    "prisma:generate": "prisma generate",
    "prisma:generate:pg": "prisma generate --schema=prisma/schema.postgres.prisma",
    "prisma:generate:postgres": "prisma generate --schema=prisma/schema.postgres.prisma",
    "prisma:generate:sqlite": "prisma generate --schema=prisma/schema.sqlite.prisma",
    "prisma:migrate:pg": "prisma migrate deploy --schema=prisma/schema.postgres.prisma",
    "prisma:migrate:postgres": "prisma migrate deploy --schema=prisma/schema.postgres.prisma",
    "prisma:migrate:sqlite": "prisma migrate deploy --schema=prisma/schema.sqlite.prisma",
    "prisma:db:push": "prisma db push --accept-data-loss",
    "prisma:db:push:sqlite": "prisma db push --schema=prisma/schema.sqlite.prisma --accept-data-loss",
    "db:seed": "tsx prisma/seed.ts",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:test": "npm run prisma:generate:sqlite && npm run prisma:db:push:sqlite && npm run db:seed && npx next build",
    "start:test": "npx next start -p 3000",
    "vercel-build": "npm run prisma:generate:pg && npx next build",
    "postinstall": "npm run prisma:generate:pg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@prisma/client": "^5.7.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "jsdom": "^23.0.1",
    "prisma": "^5.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
